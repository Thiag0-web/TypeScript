type Produto = {
  nome: string;
  preco: number;
  emEstoque: boolean;
};

function infoProduto(produto: Produto): string {
  const status = produto.emEstoque ? "EM ESTOQUE" : "FORA DE ESTOQUE";
  return `O produto ${produto.nome} custa R$${produto.preco} e est√° ${status}.`;
}

console.log(infoProduto({ nome: "Notebook", preco: 3500, emEstoque: true }));